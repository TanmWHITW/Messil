<UserControl x:Class="Messil.SideMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:core="clr-namespace:Messil.Core;assembly=Messil.Core"             
             xmlns:local="clr-namespace:Messil"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="275">
    <UserControl.Template>
        <ControlTemplate TargetType="UserControl">
            <Border Background="{StaticResource BackgroundVeryLightBrush}">
                <Grid>
                <Grid.RowDefinitions>
                        <RowDefinition Height="48" />
                        <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border CornerRadius="8 0 0 0" Grid.Row="0" Background="{StaticResource BackgroundLightBlueBrush}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <TextBox Style="{StaticResource SearchBox}" Tag="Начать диалог с ..."/>
                        <Button Content="{StaticResource FontAwesomeSearchIcon}" Style="{StaticResource SearchIconButton}" />
                    </StackPanel>
                </Border>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Width="1" 
                                Background="{StaticResource BackgroundLightBlueBrush}"
                                HorizontalAlignment="Left"/>

                        <ContentPresenter Grid.Column="1"/>
                    </Grid>
                </Grid>
            </Border>
        </ControlTemplate>
    </UserControl.Template>


</UserControl>
